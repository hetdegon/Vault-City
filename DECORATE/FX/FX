ACTOR FX_FlareYellow1 {
	+NOINTERACTION
	+NOGRAVITY
	+CLIENTSIDEONLY
	+BRIGHT
	+FORCEXYBILLBOARD
	RenderStyle ADD
	Translation "0:255=%[0.0,0.0,0.0]:[1.7,1.9,0.9]"
	Alpha 1.0
	Scale 2.0
	STATES {
		SPAWN:
			TNT1 A 0 NODELAY A_Jump(128, 2)
			FLR2 A 3
			STOP
			FLR2 A 3 A_FadeOut(0.5)
			STOP

	}
}

ACTOR FX_FlareWhite1 {
	+NOINTERACTION
	+NOGRAVITY
	+CLIENTSIDEONLY
	+BRIGHT
	+FORCEXYBILLBOARD
	RenderStyle ADD
	Alpha 0.25
	Scale 2.0
	STATES {
		SPAWN:
			TNT1 A 0 NODELAY A_Jump(128, 2)
			FLR2 A 3
			STOP
			TNT1 A 0 A_FadeOut(0.2)
			FLR2 A 3
			STOP

	}
}


ACTOR FX_RingBurst {
	Speed 2
	+NOINTERACTION
	+NOGRAVITY
	+CLIENTSIDEONLY
	+BRIGHT
	RenderStyle ADD
	Alpha 0.6
	SeeSound "imp/shotx"
	var int user_scale;
	STATES {
		SPAWN:
			TNT1 A 0 A_SetUserVar("user_scale", 1)
			GOTO MAINLOOP
		MAINLOOP:
			TNT1 A 0 A_JumpIf(user_scale > 30, 2)
			TNT1 A 0 A_SetUserVar("user_scale", user_scale+2)
			RING A 1 A_SetScale(user_scale * 0.1)
			RING A 1 A_FadeOut(0.03)
			TNT1 A 0 A_SetUserVar("user_scale", user_scale+4)
			LOOP

	}
}

ACTOR FX_CylinderBurst {
	+NOINTERACTION
	+NOGRAVITY
	+CLIENTSIDEONLY
	+BRIGHT
	RenderStyle ADD
	Alpha 0.6
	Scale 5
	STATES {
		SPAWN:
			CRNG A 30
			CRNG B 30
			CRNG C 2 A_FadeOut(0.05)
			GOTO -1
			STOP



	}
}


ACTOR FX_Beam {
	Speed 0.001
	+NOINTERACTION
	+NOGRAVITY
	+CLIENTSIDEONLY
	+BRIGHT
	RenderStyle ADD
	Alpha 0.9
	STATES {
		SPAWN:
			LASR A 10 NODELAY LIGHT("Blue32C")
			GOTO MAINLOOP

		MAINLOOP:
			LASR B 4 LIGHT("Blue32C") A_FadeOut(0.25)
			LOOP

	}
}